{
  "info": {
    "name": "ScholarlyMail Articles API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /articles",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/articles"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
              "pm.test('Response is an array', () => {",
              "    const data = pm.response.json();",
              "    pm.expect(data).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST /articles",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"1\",\n  \"title\": \"Maven in 5 minutes\",\n  \"url\": \"https://maven.apache.org/guides/getting-started/maven-in-five-minutes.html\",\n  \"createdAt\": \"2025-11-03\"\n}"
        },
        "url": "{{baseUrl}}/articles"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201 or 200', () => pm.expect([200,201]).to.include(pm.response.code));",
              "const json = pm.response.json();",
              "pm.test('Returned article has correct title', () => pm.expect(json.title).to.eql('Maven in 5 minutes'));",
              "pm.environment.set('articleId', json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET /articles/:id",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/articles/{{articleId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "pm.test('Returned article matches created one', () => pm.expect(json.id).to.eql(pm.environment.get('articleId')));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH /articles/:id",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"title\": \"Maven in 4 minutes\" }" },
        "url": "{{baseUrl}}/articles/{{articleId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "pm.test('Title was updated', () => pm.expect(json.title).to.eql('Maven in 4 minutes'));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH /articles/:id/read",
      "request": {
        "method": "PATCH",
        "header": [],
        "url": "{{baseUrl}}/articles/{{articleId}}/read"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "pm.test('Article is marked as read', () => pm.expect(json.read).to.be.true);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "DELETE /articles/:id",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/articles/{{articleId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 204', () => pm.expect([200,204]).to.include(pm.response.code));",
              "pm.test('Response data is empty', () => pm.expect(pm.response.data).eq(undefined));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ]
}
